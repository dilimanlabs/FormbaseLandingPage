.features
  h1
    text-align center
    font-weight: 400
    @media(max-width: 500px)
      font-size 20px
  .icon-controls
    height 80px
    @media(max-width: 500px)
      width 80%
    .icons
      font-family 'FontAwesome'
      width 80px
      height 80px
      font-size 30px
      cursor: pointer
      background-color rgba(244, 244, 244, 0.2)
      @media(max-width: 800px)
        font-size 16px
        width 40px
        height 40px
    .selected
      color #ffac00
      background-color rgba(244, 244, 244, 0.5)
    .icons:hover, icons:focus
      color #ffac00
      background-color rgba(244, 244, 244, 0.5)
  .feature-texts
    background-image url(/images/svg_tablet.svg)
    background-repeat no-repeat
    background-position center center
    background-origin border-box
    background-size contain
    @media(max-width: 500px)
      background none
    .text
      width 40%
      max-width 500px
      height 100%
      @media(max-width: 500px)
        width 90%
      h2
        font-size 25px
        font-weight 600
        height 50px
        @media(max-height: 900px)
          font-size 20px
      ul
        list-style none
        font-size 25px
        font-weight 300
        height 230px
        @media(max-height: 900px)
          font-size 20px